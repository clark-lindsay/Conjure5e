{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "ES5",
    "module": "commonjs",
		"declaration": true,
		"outDir": "./dist",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true
  },
  "compileOnSave": true
}
